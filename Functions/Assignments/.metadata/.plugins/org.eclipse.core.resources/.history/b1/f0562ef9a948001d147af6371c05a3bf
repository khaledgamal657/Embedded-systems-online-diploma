#include "stdio.h"

int fact(int k);
int main(){
	int k;
	printf("enter a positive number");
	fflush(stdout); fflush(stdin);
	scanf("%d",&k);
	printf("factorial of %d is %d",k,fact(k));
}

int fact(int k){
	if (k!=1)
		return k*fact(k-1);
}






















