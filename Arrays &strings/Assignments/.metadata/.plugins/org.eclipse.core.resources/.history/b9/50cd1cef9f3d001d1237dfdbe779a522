#include "stdio.h"
int main(){
	char text[100];
	char ch;
	int i;

	printf("Enter the string:\t");
	fflush(stdout); fflush(stdin);
	gets (text);
	printf("reverse of string:\t");
	for(text[i]!='\0';i=0;i--){
		ch=scanf("%c",&text[i]);
		printf("%c",ch);
	}
}

